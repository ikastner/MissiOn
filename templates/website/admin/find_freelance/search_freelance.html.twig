{% block body %}
<div class="container my-4">
    <div class="row">
        <!-- Filters Section -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Filtres</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="tjm" class="form-label">TJM maximum :</label>
                            <input type="number" id="tjm" name="tjm" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="pays" class="form-label">Pays :</label>
                            <select id="pays" name="pays" class="form-select">
                                <option value="">Tous</option>
                                <!-- Ajoutez les options de pays -->
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="competences" class="form-label">Compétences :</label>
                            <input type="text" id="competences" name="competences" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Appliquer les filtres</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Content Section -->
        <div class="col-md-8">
            <h1 class="mb-4">Parcourir les Freelances</h1>

            <!-- Search Bar -->
            <div class="input-group mb-4">
                <input type="text" class="form-control" placeholder="Rechercher des freelances...">
                <button class="btn btn-outline-secondary">Rechercher</button>
            </div>

            <!-- Freelance List -->
            {% if freelances is defined and freelances|length > 0 %}
                <div class="row gy-4">
                    {% for freelance in freelances %}
                        <div class="col-12">
                            <div class="card freelance-card">
                                <div class="card-body">
                                    <h5 class="card-title text-success">{{ freelance.nom }}</h5>
                                    <h6 class="card-subtitle text-muted">{{ freelance.titre }}</h6>
                                    <p class="card-text mb-1"><strong>{{ freelance.TJM }} € / jour</strong></p>
                                    <p class="card-text text-muted mb-2">{{ freelance.ville }}, {{ freelance.pays }}</p>
                                    {% if freelance.biographie %}
                                        <p class="card-text">{{ freelance.biographie|slice(0, 100) }}{% if freelance.biographie|length > 100 %}...{% endif %}</p>
                                    {% endif %}
                                </div>
                                <div class="card-footer d-flex justify-content-end gap-2">
                                    <a href="#" class="btn btn-sm btn-success">Inviter à l'emploi</a>
                                    <a href="#" class="btn btn-sm btn-secondary">Détails</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info" role="alert">
                    Aucun freelance n'est disponible pour le moment.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
